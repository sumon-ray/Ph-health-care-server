generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id String @id @default(uuid()) // id string hole 
  email String @unique
  role UserRole
  needPasswordChange Boolean
  status UserStatus
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  admin Admin?
  @@map("users")
}

model Admin {
  id String @id @default(uuid())
  name String 
  email String @unique
  user User @relation(fields: [email], references: [email])
  profilePhoto String?
  conatactNumber String 
  isDeleted Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  DOCTOR
  PATIENT
  
}

enum UserStatus {
    ACTIVE
    BLOCKED
}